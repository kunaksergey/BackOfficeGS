<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ua.shield.models">
    <class name="Person" table="person">
        <meta attribute="class-description">
            This class contains the person detail.
        </meta>
        <id name="uid" type="int" column="uid">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="fullName" column="fullname" type="string"/>
        <many-to-one name="post" column="postid" unique="true" lazy="false"
                     class="Post" not-null="true"/>
    </class>
</hibernate-mapping>